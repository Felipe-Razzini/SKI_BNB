<div class="container m-4 new-booking" data-controller="form" data-form-price-value="<%= @ski.daily_price %>">
  <h3 class='mb-5'>Book your skis</h3>

  <%= simple_form_for [@ski, @booking] do |f| %>
    <div class="form-inputs w-50 d-flex">
      <div class="pe-3">
        <%= f.input :start_date.to_s, as: :string,
          input_html: { data: { controller: "datepicker", action: "change->form#setStartDate" } } %>
      </div>
      <div>
        <%= f.input :end_date.to_s, as: :string,
          input_html: { data: { controller: "datepicker", action: "change->form#setEndDate"} } %>
      </div>
      <div>
        <%= f.input :daily_price, as: :hidden,
          input_html: { value: @ski.daily_price } %>
      </div>
      <div>
        <%= f.input :total_price, as: :hidden,
          input_html: { data: { form_target: "total"} } %>
      </div>
    </div>
    <div class="form-actions">
      <p data-form-target="priceDaily"></p>
      <p data-form-target="priceText"></p>
      <%= f.submit "Reserve", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
