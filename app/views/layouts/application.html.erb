    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Poppins:wght@100;300&display=swap" rel="stylesheet">
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.css" rel="stylesheet">
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <div class="pb-4">
    <%= yield %>
    </div>
    <%= render 'shared/footer' %>
    <%= render "shared/flashes" %>
  </body>
</html>
